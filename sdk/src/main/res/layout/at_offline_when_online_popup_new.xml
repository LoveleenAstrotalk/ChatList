<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/at_language_popup"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/consultantPic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/at_ic_user" />

    <TextView
        android:id="@+id/consultantNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:includeFontPadding="false"
        android:text="Acharya Krishan Gopal"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textColor="@color/at_grey"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:id="@+id/nextOnlineTimeRL">

        <TextView
            android:id="@+id/onlineInHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/at_expected_online_time"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/onlineInTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onlineInHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="10:45 AM"
            android:textColor="@color/at_green"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:id="@+id/waitTimeRL">

        <TextView
            android:id="@+id/waitTimeHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/at_current_wait_time"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/waitTimeHeading"
            android:id="@+id/waitTimeTV"
            android:textSize="14sp"
            android:text="100 minutes"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:autoLink="phone"
        android:visibility="visible"
        android:text="@string/at_your_call_might_start_around_time"
        android:textColor="@color/at_red"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:weightSum="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/at_rounded_button_grey"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:text="@string/at_cancel"
            android:layout_marginEnd="20dp"
            android:textColor="@color/at_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/at_rounded_button_yellow"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:text="@string/at_join_waitlist"
            android:textColor="@color/at_black"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>