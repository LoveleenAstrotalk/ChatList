<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/at_ic_chat_theme"
    android:orientation="vertical">

    <include
        android:id="@+id/tool"
        layout="@layout/toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tool"
        android:id="@+id/cvNewChatStatus"
        android:visibility="gone"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="8dp"
            android:gravity="center"
            android:id="@+id/tvNewChatStatus"
            android:text="Please wait new chat is initiating..."/>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/chat_disable_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvNewChatStatus"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/at_color_f7f7f7"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/quick_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:maxLines="2"
                android:layout_centerVertical="true"
                android:text="@string/at_quick_recharge_text"
                android:textColor="@color/at_dark_red"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/btn_200"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:background="@drawable/at_blue_btn_thin_border"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="+200"
                android:visibility="gone"
                android:textColor="@color/at_dark_red"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_500"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:background="@drawable/at_blue_btn_thin_border"
                android:gravity="center"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:paddingBottom="10dp"
                android:text="+500"
                android:textColor="@color/at_dark_red"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/btn_1000"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/at_blue_btn_thin_border"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Recharge"
                android:textColor="@color/at_dark_red"
                android:textSize="12dp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/paymnet_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_disable_view"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/at_paymentgateway_bg_corner"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:background="@color/at_white"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="@string/at_play"
                    android:textColor="@color/at_black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/payment_gst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="@string/at_play"
                    android:textColor="@color/at_new_gray"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/total_amount_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:text="@string/at_play"
                    android:textColor="@color/at_black"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/payment_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/at_white"
            android:scrollbars="none"
            android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/po_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymnet_ll"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:background="@color/at_white"
        android:elevation="8dp"
        android:visibility="gone"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/po_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#808080"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/potext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/at_you_ll_not_be_charged_for_the_first_minute"
                android:textColor="@color/at_white"
                android:textSize="10dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cvContinueChat"
        android:layout_below="@+id/po_suggestion"
        android:layout_marginBottom="2dp"
        android:dividerHeight="0.25dp"
        android:scrollbars="none"
        tools:listitem="" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:id="@+id/cvContinueChat"
        android:layout_above="@+id/ll_show_message_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:src="@drawable/at_ic_cross" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/at_black"
                android:id="@+id/tvContinueChat"
                android:text=" "
                android:layout_gravity="center"
                android:textSize="9dp" />



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ll_yes_button"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/at_green_btn_yes"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:id="@+id/tvContinueYes"
                    android:paddingVertical="3dp"
                    android:text="Yes"
                    android:textColor="@color/at_white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/at_red_btn_no"
                    android:gravity="center"
                    android:paddingVertical="3dp"
                    android:text="No"
                    android:visibility="gone"
                    android:id="@+id/tvContinueNo"
                    android:textColor="@color/at_dark_red" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <TextView


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progressBar"
        android:layout_marginLeft="16dp"
        android:text="@string/at_typing"
        android:textColor="@color/at_link"
        android:textSize="12dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/ll_show_message_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_down"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/recycler_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/at_border_circle">


            <ImageView

                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/at_ic_down_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_count_view"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginBottom="-50dp"
            android:background="@drawable/at_border_yellow_circle"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_small_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="12"
                android:textColor="@color/at_black"
                android:textSize="6dp" />


        </RelativeLayout>


    </RelativeLayout>


